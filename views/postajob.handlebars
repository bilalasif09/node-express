{{> header}}
<h1>Post a job</h1>
<form action="/postajob" method="POST">
  <div class="form-group">
    <label for="exampleInputName">Title</label>
    <input required type="text" name="title" value="" class="form-control" id="exampleInputName" aria-describedby="nameHelp" placeholder="Enter title">
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Description</label>
    <input required type="text" name="description" value="" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter description">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>